
	<!-- Page header -->
	<div class="page-top-section">
		<div class="overlay"></div>
		<div class="container text-right">
			<div class="page-info">
				<h2>Services</h2>
				<div class="page-links">
					<a href="#">Home</a>
					<span>Services</span>
				</div>
			</div>
		</div>
	</div>
	<!-- Page header end-->
	<div class="services-section spad">
<div class="container">
     <h1>{{post.title}}</h1>
     <p class="meta"> Posted in 
      <a href='/categories/show/#{post.category}'> {{post.category}} </a>
      by {{post.author}}</p>
     <img src='/images/{{post.mainimage}}'></br>
     {{post.body}}</br>
     
     
	 {{#if post.comments}}
      <h3> Comments </h3>
	  {{#each post.comments as |comment|}}
       <div class="comment>
        <p class="comment-name"> {{comment.name}}</p>
        <p class="comment-body">  {{comment.body}}</p>
		</div>
		{{/each}}

      {{/if}}
    <h3> Add Comment </h3>
		
		{{#if errors}}
			<ul class="errors">
			{{#each errors as |error|}}
				<li class="alert alert-danger"> {{error.msg}}</li>
			{{/each}}
			</ul>
		{{/if}}
		
	      <form class="comment-form" method='post' action='/posts/addcomment'>
			     <input name='postid' type='hidden' value='{{post._id}}'>

		<div class="form-group">
			<label>Name</label>
			<input class="form-control" type="text" name="name"/>
		</div>
		<div class="form-group">
			<label>Email</label>
			<input class="form-control" type="text" name="email"/>
		</div>
		<div class="form-group">
			<label>Body</label>
			<textarea class="form-control" type="text" name="body"></textarea>
		</div><br/>
		<div class="form-group">
		<input class="btn btn-primary btn-lg" name="sumbit" id ="submit" value="Add Comment" type="submit"/>
		</div></form>

</div>
</div>