<%- include("../header.ejs") %>

	<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        Blank page
        <small>it all starts here</small>
      </h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Examples</a></li>
        <li class="active">Blank page</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">

      <!-- Default box -->
      <div class="box">
        <div class="box-header with-border">
          <h3 class="box-title">book</h3>

          <div class="box-tools pull-right">
            <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                    title="Collapse">
              <i class="fa fa-minus"></i></button>
            <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
              <i class="fa fa-times"></i></button>
          </div>
        </div>
        <div class="box-body">
	<div class="col-12">
	   
<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Title</th>
      <th scope="col">Category</th>
      <th scope="col">Body</th>
	  <th scope="col">Author</th>
      <th scope="col">Date</th>
	  <th scope="col">Img</th>
	  <th scope="col">Edit</th>
	  <th scope="col">Delete</th>
    </tr>
  </thead>
  <tbody>
    <% if(posts){
	for(var i=0; i< posts.length;i++){ %>
				<tr>
				    <td><%=posts[i]['_id'] %></td>
					<td><%=posts[i]['title'] %></td>
					<td><%=posts[i]['category'] %></td>
					<td><%-posts[i]['body'].toString().substring(0, 200)+"...."; %></td>
					<td><%=posts[i]['author'] %></td>
					<td><%=posts[i]['date'] %></td>
					<td><img src="/images/<%=posts[i]['mainimage'] %>" width="50" height="50"></td>
					<td><a class="button" href="/admin/post/edit/<%=posts[i]['_id'] %>">Edit</a></td>
					<td>
					<a class="button" href="/admin/post/delete/<%=posts[i]['_id'] %>">Delete</a>
	      </td>
				</tr>
		
		
	<% }} %>
  </tbody>
</table>

</div>
</div>   
 </div>
        <!-- /.box-body -->
        <div class="box-footer">
          Footer
        </div>
        <!-- /.box-footer-->
      </div>
      <!-- /.box -->

    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->  
<%- include("../footer.ejs") %>
