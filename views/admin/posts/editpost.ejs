<%- include("../header.ejs") %>

	<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        Blank page
        <small>it all starts here</small>
      </h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Examples</a></li>
        <li class="active">Blank page</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">

      <!-- Default box -->
      <div class="box">
        <div class="box-header with-border">
          <h3 class="box-title">book</h3>

          <div class="box-tools pull-right">
            <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                    title="Collapse">
              <i class="fa fa-minus"></i></button>
            <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
              <i class="fa fa-times"></i></button>
          </div>
        </div>
        <div class="box-body">
	<div class="col-12">

	<!-- Page header end-->
	<div class="services-section spad">
<div class="container">
<ul class="errors">
		<%if(typeof errors != 'undefined' && errors.length >0){
		     for(var i=0;i<errors.length;i++){ %>
				<li class="alert alert-danger"> <%=errors[i]['msg']; %></li>
			<% }} %>
</ul>
<form method="post" action="/admin/post/edit" enctype="multipart/form-data">
  <div class="form-group">
    <label>Title:</label>
    <input class="form-control" name="title" type="text" value="<%=post['title'] %>" />
	 <input class="form-control" name="id" type="hidden" value="<%=post['_id'] %>" />
  </div>
  <div class="form-group">
    <label>Category:</label>
    <select class="form-control" name="category" >
		
		<% if(categories.length){ 
							  for(var i=0; i < categories.length; i++) {
							 %>
				   <% if(categories[i]['name']==post['category']){%>
				   <option value="<%= categories[i]['name'] %>" selected><%= categories[i]['name'] %></option>
				   <%}else{%>
                  <option value="<%= categories[i]['name'] %>"><%= categories[i]['name'] %></option>
                <% }}}
							 %>
	</select>
  </div>
   <div class="form-group">
    <label>Body:</label>
    <textarea class="form-control" name="body" id ="body" ><%=post['body'] %></textarea>
  </div>
  <div class="form-group">
    <label>Main Image:</label>
    <input class="form-control" name="mainimage" id ="mainimage" type="file"/>
	<input class="form-control" name="mainimage_old" id ="mainimage_old" type="hidden" value="<%=post['mainimage'] %>"/>
	<img src="/images/<%=post['mainimage'] %>" width=50 height=50>
  </div>
  <div class="form-group">
    <label>Author:</label>
    <input class="form-control" name="author" id ="author" type="text" value="<%=post['author'] %>" />
  </div>
  <div class="form-group">
       <input class="btn btn-primary btn-lg" name="sumbit" id ="submit" value="Submit" type="submit"/>
  </div>
</form>
</div>
</div>
<script src="/ckeditor/ckeditor.js"></script>
<script>
    CKEDITOR.replace( 'body' );
</script>

</div>
</div>   
 </div>
